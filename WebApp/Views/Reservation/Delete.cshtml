@model Reservation

@{
    ViewData["Title"] = "Usuń Rezerwację";
}

<h2>Usuń Rezerwację</h2>
<h3>Czy na pewno chcesz usunąć tę rezerwację?</h3>
<div>
    <h4>Rezerwacja</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToShortDateString()</dd>
        <dt class="col-sm-2">Miasto</dt>
        <dd class="col-sm-10">@Model.Miasto</dd>
        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Adres</dd>
        <dt class="col-sm-2">Pokój</dt>
        <dd class="col-sm-10">@Model.Pokój</dd>
        <dt class="col-sm-2">Właściciel</dt>
        <dd class="col-sm-10">@Model.Właściciel</dd>
        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Cena</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
    </form>
</div>
