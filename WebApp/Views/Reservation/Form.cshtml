@model Reservation

@{
    ViewData["Title"] = "Reservation Form";
}

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Formularz Rezerwacji</h2>
            <form action="Result" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="data">Data</label>
                    <input class="form-control" type="date" name="Data" id="data" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="miasto">Miasto</label>
                    <input class="form-control" type="text" name="Miasto" id="miasto" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="adres">Adres</label>
                    <input class="form-control" type="text" name="Adres" id="adres" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="pokój">Pokój</label>
                    <input class="form-control" type="text" name="Pokój" id="pokój" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="właściciel">Właściciel</label>
                    <input class="form-control" type="text" name="Właściciel" id="właściciel" required />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="cena">Cena</label>
                    <input class="form-control" type="number" step="0.01" name="Cena" id="cena" required />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Wyślij</button>
                </div>
            </form>
        </div>
    </div>
</div>
