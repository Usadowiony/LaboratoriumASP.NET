@model Reservation

@{
    ViewData["Title"] = "Edytuj Rezerwację";
}

<h2>Edytuj Rezerwację</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Data" class="form-label">Data</label>
        <input class="form-control" type="date" asp-for="Data" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Miasto" class="form-label">Miasto</label>
        <input class="form-control" type="text" asp-for="Miasto" />
        <span asp-validation-for="Miasto" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Adres" class="form-label">Adres</label>
        <input class="form-control" type="text" asp-for="Adres" />
        <span asp-validation-for="Adres" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Pokój" class="form-label">Pokój</label>
        <input class="form-control" type="text" asp-for="Pokój" />
        <span asp-validation-for="Pokój" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Właściciel" class="form-label">Właściciel</label>
        <input class="form-control" type="text" asp-for="Właściciel" />
        <span asp-validation-for="Właściciel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Cena" class="form-label">Cena</label>
        <input class="form-control" type="number" step="0.01" asp-for="Cena" />
        <span asp-validation-for="Cena" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
    </div>
</form>
